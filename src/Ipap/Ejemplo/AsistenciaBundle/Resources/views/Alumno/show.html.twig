{% extends 'MWSimpleCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Alumno'}, 'MWSimpleCrudGeneratorBundle') }}
{% endblock %}

{% block page %}
    <h1>Alumno</h1>

    <form class="form-horizontal">
        <fieldset>                <div class="control-group">
                    <label class="control-label">Codigo</label>
                    <div class="controls">                        <span class="input-xlarge uneditable-input">{{ entity.codigo }}</span>                    </div>
                </div>                <div class="control-group">
                    <label class="control-label">Id</label>
                    <div class="controls">                        <span class="input-xlarge uneditable-input">{{ entity.id }}</span>                    </div>
                </div>        </fieldset>
    </form>

        <div>
    <div class="float-left">
        <a class="btn" href="{{ path('alumno') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('alumno_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">{{ form(delete_form) }}</div>
</div>
{% endblock %}
