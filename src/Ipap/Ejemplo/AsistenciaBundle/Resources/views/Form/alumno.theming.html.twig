{# El nombre del widget es el que devuelve el método getName() del form #}
{% block ipap_ejemplo_asistenciabundle_alumno_widget %}
{% import "IpapEjemploAsistenciaBundle:Form:macro.telefono.html.twig" as macrosTelefono %}
<div class="row">
    <div class="span6">
        {{ form_row(form.nombre) }}
    </div>
    <div class="span6">
        {{ form_row(form.apellido) }}
    </div>
    <div class="span6">
        {{ form_row(form.tipoDocumento) }}
    </div>
    <div class="span6">
        {{ form_row(form.documento) }}
    </div>
    <div class="span6">
        {{ form_row(form.codigo) }}
    </div>
</div>
<div class="row-fluid">
    {{ form_label(form.telefonos) }}
    {{ form_errors(form.telefonos) }}
    <div data-prototype="{{ macrosTelefono.telefonos(form.telefonos.vars.prototype)|e }}" class="row-fluid telefonos">
        {% for telefono in form.telefonos %}
            {{ macrosTelefono.telefonos(telefono) }}
        {% endfor %}
    </div>
    <a href='#' class='btn add-telefono-form'>
        <i class='icon-plus'></i> Agregar Teléfonos
    </a>
</div>
<div class="row">
    <div class="span3">
        {{ form_row(form.save) }}
    </div>
    <div class="span3">
        {{ form_row(form.saveAndAdd) }}
    </div>
</div>
{{ form_row(form._token) }}
{% endblock %}
